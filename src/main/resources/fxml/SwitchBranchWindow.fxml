<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="10.0" maxHeight="Infinity" maxWidth="Infinity" vgap="10.0" xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxml.SwitchBranchWindow">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="120.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="150.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox GridPane.rowSpan="3">
            <children>
                <ListView maxHeight="1.7976931348623157E308"/>
                <Label text="Total project: 3"/>
            </children>
        </VBox>
        <VBox GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="3">
            <children>
                <TextField/>
                <ListView/>
                <Label text="Total branches: 1650"/>
            </children>
        </VBox>
        <VBox spacing="20.0" GridPane.columnIndex="3" GridPane.rowSpan="3">
            <children>
                <Button mnemonicParsing="false" text="Load remote branches"/>
                <VBox>
                    <children>
                        <RadioButton mnemonicParsing="false" text="Local">
                            <toggleGroup>
                                <ToggleGroup fx:id="branchesFilter"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" text="Remote" toggleGroup="$branchesFilter"/>
                        <RadioButton mnemonicParsing="false" text="Remote + Local" toggleGroup="$branchesFilter"/>
                    </children>
                </VBox>
                <CheckBox mnemonicParsing="false" text="Match in all branches"/>
                <Button mnemonicParsing="false" text="Update list"/>
            </children>
        </VBox>
        <HBox alignment="TOP_RIGHT" maxHeight="50.0" prefHeight="100.0" prefWidth="200.0" spacing="20.0"
              GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <children>
                <Button mnemonicParsing="false" text="Apply"/>
                <Button mnemonicParsing="false" text="Cancel"/>
            </children>
        </HBox>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</GridPane>
