<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Screen?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.ScrollPane?>
<?import com.lgc.gitlabtool.git.ui.javafx.StatusBar?>

<BorderPane id="background" prefHeight="${screen.visualBounds.maxY / 1.5}"
    prefWidth="${screen.visualBounds.maxX / 1.5}" xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.lgc.gitlabtool.git.ui.javafx.controllers.ModularController">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen" />
    </fx:define>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <MenuBar fx:id="menuBar">
            </MenuBar>

            <ToolBar fx:id="toolbar" style="-fx-background-color: #D7DBE3;">
            </ToolBar>
        </VBox>
    </top>

    <center>
        <SplitPane fx:id="parentPane" dividerPositions="0.65" 
            orientation="VERTICAL">
            <AnchorPane fx:id="viewPane" />
                <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
                    <TextFlow fx:id="_console" style="-fx-background-color: #D7DBE3;">
                    </TextFlow>
                </ScrollPane>
        </SplitPane>
    </center>

    <bottom>
        <StatusBar/>
    </bottom>
</BorderPane>
