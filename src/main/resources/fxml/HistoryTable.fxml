<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.lgc.gitlabtool.git.ui.table.CommitHistoryTableView?>

<?import com.lgc.gitlabtool.git.ui.table.FormattedTableCellFactory?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.lgc.gitlabtool.git.ui.javafx.controllers.TableController"
            >
    <children>
            <CommitHistoryTableView
                fx:id="historyTable"
                editable="true"
                layoutX="0.0"
                layoutY="0.0"
                AnchorPane.topAnchor = "0.0" AnchorPane.bottomAnchor = "0.0" AnchorPane.leftAnchor = "0.0" AnchorPane.rightAnchor = "0.0">
            <columns>
                <TableColumn
                        fx:id="dateColumn"
                        prefWidth="120"
                        text="Date">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                        fx:id="projectColumn"
                        prefWidth="120"
                        text="Project">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                    fx:id="messageColumn"
                    prefWidth="500"
                    text="Message">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                    fx:id="authorColumn"
                    prefWidth="140"
                    text="Author">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>

                <TableColumn
                    fx:id="authoredDateColumn"
                    prefWidth="120"
                    text="Authored date">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                    fx:id="committerColumn"
                    prefWidth="120"
                    text="Committer">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>
                <TableColumn
                        fx:id="hashColumn"
                        prefWidth="100"
                        text="Hash">
                    <cellFactory>
                        <FormattedTableCellFactory/>
                    </cellFactory>
                </TableColumn>
            </columns>
            </CommitHistoryTableView>
    </children>
</AnchorPane>
